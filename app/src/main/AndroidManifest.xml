<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.gbc.mobile.adrianpaiva.personalrestaurantguide" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAz5RIq_pOOzbCADjXXucwT0-B9xHN0p78" />

        <activity
            android:name="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.HomeActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.AddRestaurantActivity"
            android:label="@string/title_activity_add_restaurant"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.RestaurantDetailsActivity"
            android:label="@string/title_activity_restaurant_details"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.EditRestaurantActivity"
            android:label="@string/title_activity_edit_restaurant"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.DeleteRestaurantActivity"
            android:label="@string/title_activity_delete_restaurant"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>

    </application>

</manifest>
