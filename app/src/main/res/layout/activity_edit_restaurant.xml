<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="ca.gbc.mobile.adrianpaiva.personalrestaurantguide.AddRestaurantActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Restaurant Name"
            android:ems="40"
            android:id="@+id/editTextName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Address"
            android:ems="40"
            android:id="@+id/editTextAddress"
            android:layout_below="@id/editTextName"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="Phone Number"
            android:ems="40"
            android:id="@+id/editTextPhoneNumber"
            android:layout_below="@id/editTextAddress"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Description"
            android:ems="40"
            android:id="@+id/editTextDescription"
            android:layout_below="@id/editTextPhoneNumber"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Type"
            android:textSize="20dp"
            android:layout_below="@id/editTextDescription"

            android:layout_marginTop="50dp"
            android:id="@+id/textViewTag1"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTag1"
            android:layout_alignTop="@+id/textViewTag1"
            android:layout_toRightOf="@+id/textViewTag1"
            android:layout_toEndOf="@+id/textViewTag1"
            android:layout_marginLeft="33dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_below="@id/spinnerTag1"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:id="@+id/textViewTag2"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTag2"
            android:layout_alignTop="@+id/textViewTag2"
            android:layout_alignLeft="@+id/spinnerTag1"
            android:layout_alignStart="@+id/spinnerTag1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Style"
            android:layout_below="@id/spinnerTag2"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:id="@+id/textViewTag3"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTag3"
            android:layout_below="@+id/textViewTag3"
            android:layout_alignLeft="@+id/spinnerTag2"
            android:layout_alignStart="@+id/spinnerTag2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_below="@id/spinnerTag3"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:id="@+id/textViewRating"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerRating"
            android:layout_alignTop="@+id/textViewRating"
            android:layout_alignLeft="@+id/spinnerTag3"
            android:layout_alignStart="@+id/spinnerTag3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Restaurant"
            style="@style/button"
            android:id="@+id/buttonEditRestaurant"
            android:layout_below="@id/spinnerRating"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</ScrollView>
